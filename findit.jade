head
  title findit

body
  .container
    header
      h1 Places
        span.coordinates
          +coordinates

    ul
      each places
        +place

template(name="place")
  li(class=distanceClass)
    img(src=image)
    p #{name}
    p Latitude: #{latitude}
    p Longitude: #{longitude}
    p Distance: #{distance}m

template(name="coordinates")
  | Latitude: #{currentCoordinates.lat}, Longitude: #{currentCoordinates.lng}
