head
  title FindIt

body
  .container
    header
      h1 FindIt
        span.coordinates
          +coordinates

    .places
      each places
        +place

template(name="place")
  .place(class=distanceClass, style="order: #{distance};")
    img(src=image)
    p #{name}
    p Latitude: #{latitude}
    p Longitude: #{longitude}
    p Distance: #{distance}m

template(name="coordinates")
  | Latitude: #{currentCoordinates.lat}, Longitude: #{currentCoordinates.lng}
